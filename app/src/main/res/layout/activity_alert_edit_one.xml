<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivityEditAlert">


<TextView
        android:id="@+id/t_group"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintRight_toLeftOf="@id/e_group"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/t_who"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/t_who"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/e_who"
        app:layout_constraintTop_toBottomOf="@id/t_group"
        app:layout_constraintBottom_toTopOf="@id/t_key1"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/t_key1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/e_key1"
        app:layout_constraintTop_toBottomOf="@id/t_who"
        app:layout_constraintBottom_toTopOf="@id/t_talk"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/t_talk"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="3"
        android:layout_height="wrap_content"
        android:text="@string/talk"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/e_talk"
        app:layout_constraintTop_toBottomOf="@id/t_key1"
        app:layout_constraintBottom_toTopOf="@id/l_matched"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/t_prev"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintHorizontal_weight="3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/e_prev"
        app:layout_constraintTop_toBottomOf="@id/l_matched"
        />

    <EditText
        android:id="@+id/e_group"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="8"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_group"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t_group"
        app:layout_constraintBottom_toBottomOf="@id/t_group"
        />

    <EditText
        android:id="@+id/e_who"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="8"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_who"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t_who"
        app:layout_constraintBottom_toBottomOf="@id/t_who"
        />

    <EditText
        android:id="@+id/e_key1"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_key1"
        app:layout_constraintRight_toLeftOf="@id/e_key2"
        app:layout_constraintTop_toTopOf="@id/t_key1"
        app:layout_constraintBottom_toBottomOf="@id/t_key1"
        />

    <EditText
        android:id="@+id/e_key2"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/e_key1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t_key1"
        app:layout_constraintBottom_toBottomOf="@id/t_key1"
        />

    <EditText
        android:id="@+id/e_talk"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_talk"
        app:layout_constraintRight_toLeftOf="@id/e_skip"
        app:layout_constraintTop_toTopOf="@id/t_talk"
        app:layout_constraintBottom_toBottomOf="@id/t_talk"
        />

    <EditText
        android:id="@+id/e_skip"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/e_talk"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t_talk"
        app:layout_constraintBottom_toBottomOf="@id/t_talk"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_matched"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#66FF66"
        app:hintTextColor="#66FF66"
        style="@style/AppTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/l_more"
        app:layout_constraintTop_toBottomOf="@id/t_talk"
        app:layout_constraintBottom_toTopOf="@id/t_prev"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/e_matched"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint="Matched"
            android:inputType="numberSigned"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/l_more"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        app:boxStrokeColor="#66FF66"
        app:hintTextColor="#66FF66"
        style="@style/AppTheme"
        app:layout_constraintLeft_toRightOf="@id/l_matched"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/t_talk"
        app:layout_constraintBottom_toTopOf="@id/t_prev"
        >
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/e_more"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:hint="More"
            android:inputType="numberSigned"
            android:text="@string/todo"
            android:textSize="@dimen/alert_font_size"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/e_prev"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/t_prev"
        app:layout_constraintRight_toLeftOf="@id/e_next"
        app:layout_constraintTop_toTopOf="@id/t_prev"
        app:layout_constraintBottom_toBottomOf="@id/t_prev"
        />

    <EditText
        android:id="@+id/e_next"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="4"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:text="@string/todo"
        android:textSize="@dimen/alert_font_size"
        app:layout_constraintLeft_toRightOf="@id/e_prev"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/t_prev"
        app:layout_constraintBottom_toBottomOf="@id/t_prev"
        android:autofillHints = "Next" />

</androidx.constraintlayout.widget.ConstraintLayout>