<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_customNotification"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:ignore="ContentDescription"
    android:orientation="vertical">

    <LinearLayout
        android:background="@color/barLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/msg_time1"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text="09:99"
            android:textColor="@color/colorLine1"
            android:layout_gravity="center"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/msg_who1"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="@string/app_name"
            android:textSize="14sp"
            android:textColor="@color/colorLine1"
         />

        <ImageView
            android:id="@+id/stop_now1"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:src="@drawable/stop_talking" />
    </LinearLayout>
    <LinearLayout
         android:id="@+id/msg_line1"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal">
        <TextView
            android:id="@+id/msg_text1"
            android:layout_width="0dp"
            android:layout_weight="12"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:text=""
            android:textColor="@color/colorLine1"
            android:layout_gravity="center"
            />
     </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:background="@color/barLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_time2"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text="09:99"
                android:textColor="@color/colorLine2"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/msg_who2"
                android:layout_width="0dp"
                android:layout_weight="9"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:text="@string/app_name"
                android:textSize="14sp"
                android:textColor="@color/colorLine2"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/msg_line2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/msg_text2"
                android:layout_width="0dp"
                android:layout_weight="12"
                android:layout_height="match_parent"
                android:textSize="14sp"
                android:text=""
                android:textColor="@color/colorLine2"
                android:layout_gravity="center"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>

