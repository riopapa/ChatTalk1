<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:padding="2dp" >

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_nick_name"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="nick"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            />

        <TextView
            android:id="@+id/app_note"
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="some notes"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            />

        <TextView
            android:id="@+id/app_full_name"
            android:layout_width="0dp"
            android:layout_weight="16"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            android:text="app full name"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width = "match_parent"
        android:layout_height = "wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_say"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="say"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            />

        <TextView
            android:id="@+id/app_log"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="log"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            />

        <TextView
            android:id="@+id/app_group"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            android:text="noGroup"
            />

        <TextView
            android:id="@+id/app_who"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            android:text="noWho"
            />

        <TextView
            android:id="@+id/app_addWho"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            android:text="addWho"
            />

        <TextView
            android:id="@+id/app_num"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/textFore"
            android:textSize="@dimen/line_font_size"
            android:text="noNum"
            />

    </LinearLayout>
</LinearLayout>

