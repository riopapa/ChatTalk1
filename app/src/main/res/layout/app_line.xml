<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/app_line_box"
    android:layout_margin="2dp"
    android:padding="2dp" >

    <ImageView
        android:id="@+id/app_icon"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="match_parent"
        android:layout_gravity="center"
    />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:background="#D1C87B"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_nick_name"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="nick"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                />

            <TextView
                android:id="@+id/app_full_name"
                android:layout_width="0dp"
                android:layout_weight="16"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textColor="@color/textFore"
                android:textSize="11sp"
                android:text="app full name"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:background="#D8D7D2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/app_say"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="say"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                />

            <TextView
                android:id="@+id/app_log"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="log"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                />

            <TextView
                android:id="@+id/app_group"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                android:text="Group"
                />

            <TextView
                android:id="@+id/app_who"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                android:text="Who"
                />

            <TextView
                android:id="@+id/app_addWho"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                android:text="addWho"
                />

            <TextView
                android:id="@+id/app_num"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/textFore"
                android:textSize="@dimen/app_line_font_size"
                android:text="Num"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

