<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/one_line"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    android:padding="0dp" >

    <TextView
        android:id="@+id/one_group"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        android:text="group"
        android:maxLines="1"
        />

    <TextView
        android:id="@+id/one_who"
        android:layout_width="0dp"
        android:layout_weight="16"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        android:text="Who"
        android:maxLines="1"
    />

    <TextView
        android:id="@+id/one_key1"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        android:text="Key 1"
        />

    <TextView
        android:id="@+id/one_key2"
        android:layout_width="0dp"
        android:layout_weight="8"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Key 2"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        />

    <TextView
        android:id="@+id/one_talk"
        android:layout_width="0dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="talk"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        />

    <TextView
        android:id="@+id/one_matched"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        />

    <TextView
        android:id="@+id/one_skip"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="skip"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        />

    <TextView
        android:id="@+id/one_memo"
        android:layout_width="0dp"
        android:layout_weight="9"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="memo"
        android:textColor="@color/textFore"
        android:textSize="@dimen/line_font_size"
        />
</LinearLayout>

